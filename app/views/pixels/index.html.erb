<div class="container">
    <div class="text-center">
        <h1>All Pixels</h1>
    <p>Pixels are generated by a Rake task with Cron job every minute press the start button to start job</p>
    </div>
    <% base_creator_btn.each do |btn|%>
    <%= btn %>
    <% end %>
    <% unless Pixel.first.nil? %>
        
        <div class="row justify-content-center">
            <div class="col-8 align-self-center">
                <div class="d-flex justify-content-between">
                    <button class="btn btn-success btn-sm" id="job-start"> Start Job</button>
                    <button class="btn btn-danger btn-sm" id="job-pause">
                        Pause Job
                    </button>
                    <%= button_to 'Generate new pixels', pixels_generate_filial_path, class: 'btn btn-primary',method: :post %>
                </div>
            </div>
            <div class="col-8 align-self-center">
                <table id="example" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>name</th>
                            <th>R Gene</th>
                            <th>B Gene</th>
                            <th>G gene</th>
                            <th>parentA</th>
                            <th>parentB</th>
                        </tr>
                    </thead>
                
                </table>
            </div>
        </div>
        
    <% end %>
</div>


<script type="text/javascript">
    
   var table = $('#example').DataTable(
        {
            "processing": true,
             "order": [[ 0, "desc" ]],
            "ajax": {
                "url": "/pixels/index.json",
                "dataSrc": "data"
            },
            "columns": [
            { "data": "id" },
            { "data": "name", 
                "render": function(data, type, row, meta){
                    console.log(row)
                    if(type === 'display'){
                        data = `<a href="/pixels/${row.id}">  ${data} </a>`;
                    }
                    return data;
                }
             },
            {
                "data": "R"
            },
            {
                "data": "B"
            },
            {
                "data": "G"
            },
            {
                "data": "parentA.name", defaultContent: "Base Pixel"
            },
            {
                "data": "parentB.name", defaultContent: "Base Pixel"
            }
        ]

        }
    );
    document.addEventListener("turbolinks:before-cache", function() {
        if (table !== null) {
        table.destroy();
        table = null;
        }
    });
  $(document).ready(function() {
       $('#job-pause').hide();
      $('#job-start').click(()=>{
          cronStateUpdater('enabled')
         setTimeout(() => {
              $('#job-start').hide();
          $('#job-pause').show();
         }, 2000);
      })
      $('#job-pause').click(()=>{
          cronStateUpdater('paused')
          setTimeout(() => {
            $('#job-start').show();
            $('#job-pause').hide();
          }, 2000);
      })
        setInterval( function () {
            table.ajax.reload();
        }, 66000 );
  });


</script>
